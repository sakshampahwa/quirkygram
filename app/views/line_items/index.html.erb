<p id="notice"><%= notice %></p>
<img src="/assets/main.png" height="450px" width="100%">
<h1 style="color:brown;text-align:center;">Shopping Cart status</h1><br>
<section class="h-100 h-custom">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="table-responsive">
                    
          <table class="table" border ="2" >
            <thead>
              <tr>
                <th scope="col" >Store Name  </th>
                <th scope="col" >price</th>
                <th scope="col"> Quantity</th>
                <th scope="col">Amount</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @line_items.each do |line_item| %>
                <tr>
                  <td><%= line_item.store.name %></td>
                  <td><%= line_item.store.price%></td>
                  <td><%= line_item.quantity %></td>
                  <td><%= line_item.total_price %></td> 
                  <td><%= link_to 'Show', line_item %></td>
                  <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
                  <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section><br>
 
<div style=" text-align:center;">    
  <%= link_to 'Go to cart', carts_path %>
</div><br><br>
